  "version": "2.0.0",
  "tasks": [
    /* 
    {
      "label": "DEPLOY",
      "type": "shell",
      "command": "npm run deploy",
      "options": {
        "statusbar": {
          "label": "Deploy",
          "color": "#adc178"
        }
      }
    },
    {
      "label": "PREVIEW",
      "type": "shell",
      "command": "npm run preview",
      "options": {
        "statusbar": {
          "label": "Preview",
          "color": "#ffd500"
        }
      }
    },
    
    */
    {
      "label": "VITE INSTALL",
      "type": "shell",
      "command": "npm create vite@latest ./ ; npm i ; npm i -D tailwindcss postcss autoprefixer ; npx tailwind init -p ; npm i react-icons --save ; npm i tailwind-merge ; npm i @types/node -D ; cd .\\src\\ ; del App.css ; Remove-Item .\\assets\\ -Recurse -Force ; mkdir components ; npm run dev ; ",
      "options": {
        "statusbar": {
          "label": "Vite",
          "color": "#FF6B6B"
        }
      }
    },
    {
      "label": "Default: NextJS React TypeScript TailwindCSS",
      "type": "shell",
      "command": "npx create-next-app@latest ./ --ts --tailwind --eslint --app ; npm i react-icons --save ; mkdir components ; npm run dev ; ",
      "options": {
        "statusbar": {
          "label": "NextJS",
          "color": "#FFD700"
        }
      }
    },
    {
      "label": "UI: NextJS ShadCN",
      "type": "shell",
      "command": "npx create-next-app@latest ./ --ts --tailwind --eslint --app ; npm i react-icons --save ; npx shadcn-ui@latest init ; npx shadcn-ui@latest add ; npm run dev ; ",
      "options": {
        "statusbar": {
          "label": "NextJS ShadCN",
          "color": "#00E5FF"
        }
      }
    },
    /* 
    {
      "label": "VITE INSTALL NO TAILWIND",
      "type": "shell",
      "command": "npm create vite@latest ./ ; npm i ; npm install react-icons --save ; npm install gh-pages --save-dev ; npm i @types/node -D ; cd .\\src\\ ; del App.css ; Remove-Item .\\assets\\ -Recurse -Force ; mkdir pages ; mkdir components ; ",
      "options": {
        "statusbar": {
          "label": "No Tailwind",
          "color": "#FF7F50"
        }
      }
    },
    */
    {
      "label": "DEV",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "statusbar": {
          "label": "Local",
          "color": "#00FF7F"
        }
      }
    },
    {
      "label": "JS",
      "type": "shell",
      "command": "node ${fileDirname}/${fileBasenameNoExtension}.js",
      "options": {
        "statusbar": {
          "label": "JS",
          "color": "#F7DF1E"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "TS",
      "type": "shell",
      "command": "tsc ${file} ; node ${fileDirname}/${fileBasenameNoExtension}.js",
      "options": {
        "statusbar": {
          "label": "TS",
          "color": "#007ACC"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
